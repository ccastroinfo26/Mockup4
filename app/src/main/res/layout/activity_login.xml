<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".Login">

    <ImageView
        android:id="@+id/LogoDiligência"
        android:layout_width="330dp"
        android:layout_height="170dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logodiligencia" />

    <EditText
        android:id="@+id/etEmailLog"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="45dp"
        android:drawableStart="@drawable/email"
        android:drawablePadding="3dp"
        android:ems="10"
        android:hint="@string/campoEmail"
        android:inputType="textEmailAddress"
        android:padding="2dp"
        android:paddingStart="5dp"
        android:textColor="@color/branco"
        android:textColorHint="@color/branco"
        android:textColorLink="@color/transparent"
        android:theme="@style/MyEditTextTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LogoDiligência" />

    <EditText
        android:id="@+id/etSenhaLog"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="45dp"
        android:drawableStart="@android:drawable/ic_lock_idle_lock"
        android:drawablePadding="3dp"
        android:ems="10"
        android:hint="@string/campoSenha"
        android:inputType="textPassword"
        android:padding="2dp"
        android:textColor="@color/branco"
        android:textColorHint="@color/branco"
        android:textColorLink="@color/transparent"
        android:theme="@style/MyEditTextTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etEmailLog" />

    <Button
        android:id="@+id/botaoForgotPss"
        android:layout_width="192dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="45dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:text="@string/btnForgotpss"
        android:textAllCaps="false"
        android:textColor="@color/branco"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etSenhaLog" />

    <Button
        android:id="@+id/botaoLogIN"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/formato_botao"
        android:backgroundTint="@color/colorPrimary"
        android:clickable="true"
        android:drawableLeft="@drawable/arrow"
        android:drawablePadding="2dp"
        android:onClick="botaoLogIN"
        android:paddingLeft="110dp"
        android:paddingRight="110dp"
        android:text="@string/Entrar"
        android:textColor="@color/branco"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botaoForgotPss" />

    <TextView
        android:id="@+id/txtOutroAcesso"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="140dp"
        android:text="@string/txtOutrosAcessos"
        android:textColor="@color/branco"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botaoLogIN" />

    <ImageButton
        android:id="@+id/botaoLogFB"
        android:layout_width="158dp"
        android:layout_height="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="2dp"
        android:background="@color/colorPrimary"
        android:clickable="true"
        android:onClick="buttonLogFB"
        app:layout_constraintEnd_toStartOf="@+id/botaoLogGoogle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtOutroAcesso"
        app:srcCompat="@drawable/facebook" />

    <ImageButton
        android:id="@+id/botaoLogGoogle"
        android:layout_width="158dp"
        android:layout_height="45dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="45dp"
        android:background="@color/colorPrimary"
        android:clickable="true"
        android:onClick="buttonLogG"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/botaoLogFB"
        app:layout_constraintTop_toBottomOf="@+id/txtOutroAcesso"
        app:srcCompat="@drawable/googleplus" />

    <Button
        android:id="@+id/botaoCadUser"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="70dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:onClick="cadastrar"
        android:text="@string/btnNewUser"
        android:textAllCaps="false"
        android:textColor="@color/branco"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botaoLogFB" />

</androidx.constraintlayout.widget.ConstraintLayout>